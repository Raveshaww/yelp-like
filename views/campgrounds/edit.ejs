<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="form-h1">Edit <%= campground.name %></h1>
        <div class="form-div">
            <form  action="/campgrounds/<%= campground._id %>?_method=put" method="POST">
                <div class="form-group">
                    <input class="form-control" name="campground[name]" type="text" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                        <input class="form-control" name="campground[price]" type="number" value="<%= campground.price %>" step="0.01" required>
                    </div>
                <div class="form-group">
                    <input class="form-control" name="campground[image]" type="text" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" name="campground[description]" type="text" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
